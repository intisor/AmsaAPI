@page
@model AmsaAPI.Pages.ImportModel

<!DOCTYPE html>
<html>
<head>
    <title>Import</title>
    <style>
        body { font-family: Arial; max-width: 600px; margin: 50px auto; }
        input { display: block; margin: 10px 0; }
        button { padding: 10px 20px; }
        .msg { padding: 10px; margin: 10px 0; border-radius: 3px; }
        .ok { background: #d4edda; color: #155724; }
        .err { background: #f8d7da; color: #721c24; }
    </style>
</head>
<body>
    <h2>Member Import</h2>
    
    <form method="post" enctype="multipart/form-data">
        <input type="file" name="CsvFile" accept=".csv" required />
        <button type="submit">Import</button>
    </form>

    @if (Model.Message != null)
    {
        <div class="msg @(Model.Success == true ? "ok" : "err")">
            <strong>@Model.Message</strong>
            @if (Model.TotalRecords > 0)
            {
                <p>Total: @Model.TotalRecords | Success: @Model.SuccessfulImports | Failed: @Model.FailedImports</p>
            }
        </div>

        @if (Model.Errors?.Any() == true)
        {
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        }
    }
</body>
</html>
